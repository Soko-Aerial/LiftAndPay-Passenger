<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/extraFadedBlue"
tools:context=".ProfileSetup.SignUp001">


    <View
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/profile_bkg"
        android:elevation="-2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
       >

        <LinearLayout
            android:id="@+id/photoUploadId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"

            android:layout_margin="40dp"
            android:background="@drawable/ripple"
            android:backgroundTint="@color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:padding="5dp"
            android:orientation="vertical"
            app:strokeColor="@color/primaryColors"
            >


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profileImgId"
                android:layout_width="200dp"
                android:padding="5dp"
                android:layout_height="200dp"
                android:background="@color/primaryColors"
                android:clickable="true"
                android:contentDescription="SelectedImg"
                android:focusable="true"
                android:foreground="@drawable/ripple"
                android:foregroundTint="@color/transparentColor"
                android:src="@drawable/person_img"
                app:shapeAppearance="@style/ShapeAppearance.CircularBorder"
                app:strokeColor="@color/fadedBlue"
                app:strokeWidth="4dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Profile Setup"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp">

                <EditText
                    android:id="@+id/usernameId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:inputType="textEmailAddress"
                    android:maxWidth="220dp"
                    android:maxLength="20"
                    android:minWidth="190dp"
                    android:paddingStart="15dp" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp">

                <EditText
                    android:id="@+id/emailId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:maxWidth="220dp"
                    android:maxLength="50"
                    android:minWidth="190dp"
                    android:paddingStart="15dp" />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/signupInfoText001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryColors" />

        <ProgressBar
            android:id="@+id/verifyProgressId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/RideFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="end"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnTosignUp002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/ripple"
            android:backgroundTint="@color/fadedBlue"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textColor="@color/primaryColors"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="Save" />



    </LinearLayout>






</RelativeLayout>
