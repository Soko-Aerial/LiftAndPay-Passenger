<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivities.Rides.PendingRideMapActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_left_arrow_1_"/>

    <TextView
        android:id="@+id/yourProfileTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginTop="45dp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:text="Ride Details" />

    <TextView
        android:id="@+id/activityDescriptionTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_below="@id/yourProfileTextId"
        android:text="Here you can see the rides you have completed"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <androidx.cardview.widget.CardView


        android:layout_width="391dp"
        android:layout_height="188dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="329dp"
        tools:ignore="MissingClass">


        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"


            android:layout_marginEnd="4dp"
            android:text="08.09.2018 9:59 PM"
            android:textColor="#3d56f5"


            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="260dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"


            android:layout_marginEnd="4dp"
            android:text="$9.00"
            android:textColor="#3d56f5"


            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="42dp"


            android:layout_marginEnd="4dp"
            android:text="Ford Fiesta"
            android:textColor="#3d56f5"


            android:textSize="16dp"

            />


        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="270dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="42dp"


            android:layout_marginEnd="4dp"
            android:text="24km"
            android:textColor="#3d56f5"


            android:textSize="16dp"

            />


        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="131dp"
            android:layout_marginTop="60dp"
            android:outlineSpotShadowColor="#f2345a"


            android:src="@drawable/img_map" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/departureLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:layout_marginTop="350dp"
        android:pointerIcon="arrow"
        android:text="Woodward street"

        />

    <TextView
        android:id="@+id/arrivalLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:layout_marginTop="380dp"
        android:pointerIcon="arrow"
        android:text="Street palace street"

        />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-3dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="240dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_marginStart="10dp"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/model"
        android:text="Ford Fiesta"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_marginStart="60dp"
        android:textSize="15dp"

        android:id="@+id/transmission"
        android:text="Manual"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="450dp"
        android:layout_marginStart="15dp"

        android:src="@drawable/ic_manual_transmission" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="450dp"
        android:layout_marginStart="124dp"

        android:src="@drawable/ic_currency" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_marginStart="155dp"
        android:textSize="15dp"

        android:id="@+id/pricekm"
        android:text="$1.20"/>

    <ImageView
        android:layout_width="114dp"
        android:layout_height="98dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="410dp"

        android:src="@drawable/carimage" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="67dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="530dp"
        android:layout_marginStart="10dp"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/help"
        android:text="Need Help with this ride"/>

    <View
        android:id="@+id/divide2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginBottom="151dp"
        android:background="?android:attr/listDivider" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_next"
        android:layout_marginTop="533dp"
        android:clickable="true"
        android:layout_marginStart="300dp"
        />

</RelativeLayout>