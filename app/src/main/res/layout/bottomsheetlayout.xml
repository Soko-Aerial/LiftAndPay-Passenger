<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_bg"
    android:layout_height="match_parent">
   
   <ImageView
       android:layout_width="70dp"
       android:layout_height="wrap_content"
      android:src="@drawable/ic_baseline_remove_24"
       android:scaleType="centerCrop"
       android:layout_gravity="center|top"
       />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:orientation="horizontal">

      <TextView
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:textColor="@color/black"
          android:text="Ford Fiesta"
          android:layout_marginTop="10dp"
          android:textStyle="bold"
          android:layout_marginStart="10dp"
          android:textSize="30sp"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:textStyle="bold"
          android:layout_marginStart="10dp"
          android:textSize="18sp"
         android:text="3/5 seats occupied"/>

   </LinearLayout>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/transmission"
       android:layout_marginTop="20dp"
      android:text="Manual"/>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/distance"
       android:paddingTop="10dp"
       android:text="238km"/>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/amount_km"
       android:paddingTop="10dp"
       android:layout_marginTop="-30dp"
       android:layout_marginStart="90dp"
       android:text="$1.20/min"/>

   <TextView
       android:id="@+id/distanceAway"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="-50dp"
       android:layout_marginStart="90dp"
       android:text="400 metres away" />

   <ImageView
       android:layout_width="106dp"
       android:layout_height="105dp"
       android:layout_marginStart="220dp"
       android:layout_marginTop="-50dp"
       android:src="@drawable/vehicle1" />

   <View
       android:id="@+id/divider"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="?android:attr/listDivider" />

   <com.google.android.material.button.MaterialButton
       android:id="@+id/button1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/white"
       android:elevation="30dp"
       android:layout_marginTop="20dp"
       app:cornerRadius="30dp"
       android:text="Book this Ride"
       android:padding="10dp" />
   <TextView
       android:layout_width="wrap_content"
       android:layout_marginTop="20dp"
       android:layout_height="wrap_content"
       android:text="Economic comfortable car, which lets you
easily get around the city. It has 5 seats, so
you can take your colleagues for a ride! 150
horse power and you will never miss a green
light."
       android:textSize="20dp" />

</LinearLayout>