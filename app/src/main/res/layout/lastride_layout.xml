<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/img_bck_rectangle"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/lookAboveBtnId"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:foreground="@drawable/ic_arrow_up"
        android:clickable="true"
        android:focusable="true"
        android:backgroundTint="@color/primaryColors"
        android:background="@drawable/ripple"
        android:foregroundTint="@color/white"
        android:layout_gravity="end"

        />


    <TextView
        android:id="@+id/lookAboveTxtId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search and book a new ride"
        android:textAlignment="textEnd"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/lastRideInfoId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You have not booked a ride yet"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/primaryColors"
        android:layout_marginVertical="8dp"

/>


    <TextView
        android:id="@+id/lookBelowTxtId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check your previous rides"
        android:textAlignment="textStart"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/lookBelowBtnId"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:foreground="@drawable/ic_arrow_up"
        android:backgroundTint="@color/primaryColors"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple"
        android:foregroundTint="@color/white"
        android:layout_gravity="start"
        android:rotation="180"
        />








</LinearLayout>