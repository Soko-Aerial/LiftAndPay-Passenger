<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivities.Rides.PendingRideMapActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_left_arrow_1_"/>

    <TextView
        android:id="@+id/yourProfileTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginTop="45dp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:text="Vehicle Type" />

    <TextView
        android:id="@+id/activityDescriptionTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_below="@id/yourProfileTextId"
        android:text="Choose desired vehicle type. We offer cars suitable for most every day needs."
        android:textColor="@color/black"
        android:textSize="20dp" />

    <com.google.android.material.card.MaterialCardView
        style="@style/ProfileCardViewStyle"
        android:backgroundTint="@color/primaryColors"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="70dp"
        android:layout_marginTop="140dp"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true"
        android:id="@+id/card_carType"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="195dp"

                android:layout_height="71dp"
                android:layout_alignParentBottom="true"

                android:layout_marginLeft="-85dp"

                android:layout_marginBottom="2dp"
                android:src="@drawable/carimg1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car"
                android:textSize="20dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="82dp"
                android:layout_marginTop="30dp"
                android:text="Need to travel around the city? Go from place A to B?"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        style="@style/ProfileCardViewStyle"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="70dp"
        android:layout_marginTop="230dp"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true"
        android:id="@+id/card_carType2"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="195dp"
                android:layout_height="71dp"
                android:layout_alignParentBottom="true"

                android:layout_marginLeft="-85dp"

                android:layout_marginBottom="2dp"
                android:src="@drawable/carimage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Van"
                android:textSize="20dp"

                android:layout_marginStart="80dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/primaryColors"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="82dp"
                android:layout_marginTop="30dp"
                android:text="Need to travel around the city? Go from place A to B?"
                android:textColor="@color/primaryColors"
                android:textSize="15dp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="-1dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="334dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/yourProfileTextId2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="320dp"
        android:text="Price Range"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/activityDescriptionTextId2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yourProfileTextId2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"

        android:text="Pick a suitable price range per minute."
        android:textColor="@color/black"
        android:textSize="20dp" />

    <!-- Discrete slider -->
    <com.google.android.material.slider.RangeSlider
        android:layout_width="wrap_content"
        android:id="@+id/rangeSlider"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="369dp"
        android:stepSize="1.0"
        android:value="20"
        android:valueFrom="0.0"


        android:valueTo="100.0" />


    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="250dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/yourProfileTextId3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="400dp"
        android:text="Transmission"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />
    <com.google.android.material.card.MaterialCardView
        style="@style/ProfileCardViewStyle"
        android:backgroundTint="@color/primaryColors"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="70dp"
        android:layout_marginTop="433dp"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true"
        android:id="@+id/card_tranmissiontype"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img3"
                android:layout_width="195dp"

                android:layout_height="71dp"
                android:layout_alignParentBottom="true"


                android:layout_marginLeft="-65dp"


                android:layout_marginBottom="2dp"
                android:src="@drawable/ic_manual_transmission2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manual"
                android:textSize="20dp"

                android:layout_marginStart="80dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="82dp"
                android:layout_marginTop="30dp"
                android:text="You change your gears yourself, decide for yourself!"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        style="@style/ProfileCardViewStyle"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="70dp"
        android:layout_marginTop="520dp"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true"
        android:id="@+id/card_tranmissiontype2"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img5"
                android:layout_width="195dp"

                android:layout_height="71dp"
                android:layout_alignParentBottom="true"

                android:layout_marginLeft="-85dp"

                android:layout_marginBottom="2dp"
                android:src="@drawable/ic_manual_transmission" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Automatic"
                android:textSize="20dp"


                android:layout_marginStart="80dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/primaryColors"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="82dp"
                android:layout_marginTop="30dp"
                android:text="Gears switch automatically s, less fun, but also less hastle."
                android:textColor="@color/primaryColors"
                android:textSize="15dp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
    <Button
        android:id="@+id/results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:text="Show Results"
        android:textColor="@color/white"
        android:backgroundTint="@color/primaryColors"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        />

</RelativeLayout>