<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#083D56F5"
tools:context=".SettingUp.LogAuth">

<View
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/type_msg_box"
    android:rotation="180"
    android:layout_alignParentTop="true"
    />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="#083D56F5"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="15dp"
        android:text="Login"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"/>
        <EditText
            android:id="@+id/countryCodeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:inputType="phone"
            android:maxLength="3"
            android:hint="233"/>

        <EditText
            android:id="@+id/phoneNumberId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:inputType="phone"
            android:maxLength="10"
            android:minWidth="190dp"
            android:hint="233333333"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/verifyProgressId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="end"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/btnTosignUp002"
            android:layout_gravity="end"
            android:layout_width="50dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="8dp"
            android:foreground="@drawable/btn_back"
            android:foregroundTint="@color/primaryColors"
            android:layout_height="50dp"
            android:backgroundTint="@color/fadedBlue"
            android:background="@drawable/ripple"
            />


        <TextView
            android:id="@+id/btnTosignUp003"
            android:layout_gravity="end"
            android:layout_width="50dp"
            android:clickable="true"
            android:layout_alignParentEnd="true"
            android:focusable="true"
            android:rotation="180"
            android:layout_margin="8dp"
            android:foreground="@drawable/btn_back"
            android:foregroundTint="@color/primaryColors"
            android:layout_height="50dp"
            android:backgroundTint="@color/fadedBlue"
            android:background="@drawable/ripple"
            />



    </RelativeLayout>


    <TextView
        android:id="@+id/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are about to log onto the platform"
        android:textColor="@color/primaryColors"/>


</LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/type_msg_box"
    android:layout_alignParentBottom="true"
    />


</RelativeLayout>
