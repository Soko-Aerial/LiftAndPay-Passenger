<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackgroundColor"
    tools:context=".MainFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/yourProfileTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginTop="9dp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:text="Your Profile" />

    <TextView
        android:id="@+id/activityDescriptionTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_below="@id/yourProfileTextId"
        android:text="Here you can see the rides you have completed"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/activityDescriptionTextId"
    >

    <com.google.android.material.card.MaterialCardView
       style="@style/ProfileCardViewStyle"
        android:layout_margin="10dp"
       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            style="@style/ProfileCardText"
            android:text="Chris Bailey"
            android:textStyle="bold"
            />
        <TextView
            style="@style/ProfileCardText"
            android:text="555 - 555 - 5555"
          />
        <TextView
            style="@style/ProfileCardText"
            android:text="Chris.baily@gmail.com"
         />
        </LinearLayout>

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_next"
             />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
       style="@style/ProfileCardViewStyle"
        android:layout_margin="10dp"
       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            style="@style/ProfileCardText"
            android:text="Privacy Settings"
            android:textStyle="bold"
            />
        <TextView
            style="@style/ProfileCardText"
            android:text="Manage you privacy settings"
          />
        <TextView
            style="@style/ProfileCardText"
            android:text="Chris.baily@gmail.com"
         />
        </LinearLayout>

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_next"
             />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
       style="@style/ProfileCardViewStyle"
        android:layout_margin="10dp"
       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            style="@style/ProfileCardText"
            android:text="Chris Bailey"
            />
        <TextView
            style="@style/ProfileCardText"
            android:text="555 - 555 - 5555"
          />
        <TextView
            style="@style/ProfileCardText"
            android:text="Chris.baily@gmail.com"
         />
        </LinearLayout>

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_next"
             />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


</RelativeLayout>