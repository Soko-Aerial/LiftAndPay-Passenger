<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="443dp"
            android:layout_height="57dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="9dp"
            android:text="Payment Methods"
            android:textColor="#ffbe0b"
            android:textSize="25dp"

            android:textStyle="bold" />






        <Button
            android:id="@+id/textButton"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Add Payment Method"
            android:textColor="#ffffff"
            android:backgroundTint="#ffbe0b"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            />

        <TextView
            android:layout_width="443dp"
            android:layout_height="57dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="-50dp"
            android:text="Promotions"
            android:textColor="#ffbe0b"
            android:textSize="25dp"

            android:textStyle="bold" />


        <TextView
            android:layout_width="443dp"
            android:layout_height="57dp"

            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:text="Stay Alert as we sometimes throw \n discount codes."
            android:textColor="#ffbe0b"
            android:textSize="20dp" />


        <Button
            android:id="@+id/button1"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="-40dp"
            android:layout_marginStart="10dp"
            android:text="Add Discount code"
            android:backgroundTint="#f2f2f2"
            android:background="@layout/dash_border"
            android:padding="10dp" />
    </LinearLayout>





</ScrollView>
