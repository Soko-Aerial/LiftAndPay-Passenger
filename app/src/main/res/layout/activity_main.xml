<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/maincontainer"
    tools:context=".MainActivities.MainActivity"
    android:background="@drawable/bkg_main">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/liftLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:lottie_colorFilter="@color/primaryColors"
        android:layout_alignParentStart="true"
        android:layout_below="@id/welcomeText"
        app:tintMode="multiply"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/spalsh" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/extraFadedBlue"
        android:elevation="1dp"
        android:padding="15dp"
        android:text="Join a driver going your direction. \nA better way to carpool is made to suit both drivers and passengers."
        android:textColor="@color/primaryColors"
        android:textSize="20sp"
        android:textStyle="bold" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/welcomeAnim"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_above="@id/footer"
        android:layout_centerInParent="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/welcome"
        app:tint="@color/primaryColors" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:id="@+id/footer">

        <Button
            android:id="@+id/signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:text="signin"/>

    </LinearLayout>

</RelativeLayout>