<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@color/mainBackgroundColor"
    android1:orientation="vertical">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Methods"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Choose desired vehicle type. We offer cars suitable for most every day needs."
            android:textColor="@color/black"
            android:textSize="16dp" />


        <com.google.android.material.card.MaterialCardView
           style="@style/PaymentMethodCardViewStyle">

            <RelativeLayout
                style="@style/PaymentMethodCardViewStyle.RelativeLayout">

                <LinearLayout
                    style="@style/PaymentMethodCardViewStyle.LinearLayout">

                    <TextView
                        style="@style/PaymentMethodCardViewStyle.AccountIdText"
                        android:text="**** **** **** 9878"
                       />

                    <TextView
                     style="@style/PaymentMethodCardViewStyle.AccountExpiringDate"
                        android:text="expires 10/24"
                    />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView4"
                    style="@style/PaymentMethodCardViewStyle.CardLogoStyle"
                    android:background="#FFCC00"
                    android:layout_height="48dp"
                    android:layout_width="48dp"
                    android:src="@drawable/ic_mtnmomologo" />

                <Button
                    android:id="@+id/payment_btn"
                    style="@style/PaymentMethodCardViewStyle.ButtonStyle"
                    android:text="Edit"/>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            style="@style/PaymentMethodCardViewStyle">

            <RelativeLayout
                style="@style/PaymentMethodCardViewStyle.RelativeLayout">

                <LinearLayout
                    style="@style/PaymentMethodCardViewStyle.LinearLayout">

                    <TextView
                        style="@style/PaymentMethodCardViewStyle.AccountIdText"
                        android:text="**** **** **** 9878"
                        />

                    <TextView
                        style="@style/PaymentMethodCardViewStyle.AccountExpiringDate"
                        android:text="expires 10/24"
                        />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView5"
                    style="@style/PaymentMethodCardViewStyle.CardLogoStyle"
                    android:src="@drawable/ic_icons8_paypal" />

                <Button
                    android:id="@+id/payment_btn1"
                    style="@style/PaymentMethodCardViewStyle.ButtonStyle"
                    android:text="Edit"/>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            style="@style/PaymentMethodCardViewStyle">

            <RelativeLayout
                style="@style/PaymentMethodCardViewStyle.RelativeLayout">

                <LinearLayout
                    style="@style/PaymentMethodCardViewStyle.LinearLayout">

                    <TextView
                        style="@style/PaymentMethodCardViewStyle.AccountIdText"
                        android:text="**** **** **** 9878"
                        />

                    <TextView
                        style="@style/PaymentMethodCardViewStyle.AccountExpiringDate"
                        android:text="expires 10/24"
                        />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView6"
                    style="@style/PaymentMethodCardViewStyle.CardLogoStyle"
                    android:src="@drawable/ic_icons8_mastercard" />

                <Button
                    android:id="@+id/payment_btn2"
                    style="@style/PaymentMethodCardViewStyle.ButtonStyle"
                    android:text="Edit"/>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>


        <Button
            android:id="@+id/paymentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Add Payment Method"
            android:textColor="@color/black"
            android:backgroundTint="@color/orange"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Promotions"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stay Alert as we sometimes throw discount codes."
            android:textColor="@color/black"
            android:layout_marginVertical="10dp"
            android:textSize="16dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Add Discount code"
            android:padding="10dp" />
    </LinearLayout>






