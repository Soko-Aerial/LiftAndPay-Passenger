<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#083D56F5"
tools:context=".ProfileSetup.LoginActivity">

<View
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/type_msg_box"
    android:rotation="180"
    android:layout_alignParentTop="true"
    />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="#083D56F5"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="15dp"
        android:text="Log unto Lift-N-Pay"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/emailId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:minWidth="190dp"
            android:maxWidth="220dp"
            android:hint="Email"/>

        <EditText
            android:id="@+id/passwordId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:inputType="textEmailAddress"
            android:maxLength="20"
            android:minWidth="190dp"
            android:maxWidth="220dp"
            android:hint="Password"/>

    </LinearLayout>

    <Button
        android:id="@+id/verifyPhoneNumberBtnId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are about to log onto the platform"
        android:textColor="@color/primaryColors"/>

    <ProgressBar
        android:id="@+id/verifyProgressId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        />

</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/type_msg_box"
        android:layout_alignParentBottom="true"
        />

    <LinearLayout
        android:id="@+id/RideFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="start"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/signUpBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:backgroundTint="@color/extraFadedBlue"
            android:text="Signup"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:background="@drawable/ripple"/>

    </LinearLayout>






</RelativeLayout>